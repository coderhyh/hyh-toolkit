{
  "name": "hyh-toolkit",
  "version": "0.2.6",
  "description": "tools",
  "author": "coderhyh Fu <coderhyh@gmail.com>",
  "license": "MIT",
  "homepage": "https://coderhyh.github.io/hyh-toolkit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderhyh/hyh-toolkit"
  },
  "bugs": "https://github.com/coderhyh/hyh-toolkit/issues",
  "main": "./lib/index.js",
  "types": "./es/index.d.ts",
  "module": "./es/index.js",
  "files": [
    "dist",
    "lib",
    "es"
  ],
  "sideEffects": [
    "dist/*"
  ],
  "keywords": [
    "tool",
    "toolkit",
    "hook",
    "vite plugin",
    "utils",
    "vue",
    "vite"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./es": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js"
    },
    "./lib": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js"
    },
    "./es/vite-plugin": {
      "types": "./es/vite-plugin.d.ts",
      "import": "./es/vite-plugin.js"
    },
    "./lib/vite-plugin": {
      "types": "./lib/vite-plugin.d.ts",
      "require": "./lib/vite-plugin.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "build": "npm run clean && vue-tsc --noEmit && vite build",
    "clean": "rimraf dist lib es types",
    "release": "bump --tag --commit \"release: v%s\" --push",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts packages/ --fix",
    "commit": "git add . && cz",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "docs:dev": "vitepress dev packages",
    "docs:build": "vitepress build packages",
    "docs:preview": "vitepress preview packages",
    "init": "pnpm i && git init && pnpm run prepare && git add . && git commit -m 'init'"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "commitizen": "4.2.4",
    "cz-customizable": "6.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.16.6",
    "vite": "^4.4.4",
    "vite-plugin-build": "^0.10.0",
    "vitepress": "1.0.0-beta.5",
    "vitest": "^0.33.0",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  }
}
